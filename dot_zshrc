export XDG_CONFIG_HOME="$HOME/.config"
export HOMEBREW_NO_ENV_HINTS=1

alias h="cd $HOME"
alias g="cd $HOME/Git"
alias j="cd $HOME/Git/journal"
alias p="cd $HOME/Git/python"
alias n="cd /Volumes/notes/zettelkasten"

alias c="chezmoi"
alias l="lazygit"
alias o="opencode"
alias m="micro"
alias docker="podman"

eval "$(starship init zsh)"

# Source brew zsh files 
source $(brew --prefix)/share/zsh-autosuggestions/zsh-autosuggestions.zsh
source $(brew --prefix)/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# Disable underline highlight
(( ${+ZSH_HIGHLIGHT_STYLES} )) || typeset -A ZSH_HIGHLIGHT_STYLES
ZSH_HIGHLIGHT_STYLES[path]=none
ZSH_HIGHLIGHT_STYLES[path_prefix]=none

# Open yazi and cd into rectent path
function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	command yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ "$cwd" != "$PWD" ] && [ -d "$cwd" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

# Load .zshrc.local if it exists
test -r ~/.zshrc.local && source ~/.zshrc.local
